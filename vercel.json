{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "src/api/**/*.js": {
      "memory": 3008,
      "maxDuration": 300
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/api/$1"
    },
    {
      "src": "/scrape",
      "dest": "/src/api/scrapeAds.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/health",
      "dest": "/src/api/scrapeAds.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}