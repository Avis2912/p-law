{
  "version": 2,
  "builds": [
    {
      "src": "src/api/scrapeAds.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 60,
        "memory": 1024,
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "env": {
    "CHROME_AWS_LAMBDA_CACHE_DIR": "/tmp"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/api/$1"
    },
    {
      "src": "/scrape",
      "dest": "/src/api/scrapeAds.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/health",
      "dest": "/src/api/scrapeAds.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}